<Window x:Class="ActiproRoslynPOC.Views.SimpleArgumentEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="编辑参数"
        Height="450"
        Width="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 说明文字 -->
        <TextBlock Grid.Row="0"
                   Text="在下方表格中添加参数（键值对）。可以直接编辑单元格，按 Delete 删除行。"
                   Margin="0,0,0,10"
                   TextWrapping="Wrap"
                   Foreground="#666"/>

        <!-- 参数列表 -->
        <DataGrid Grid.Row="1"
                  Name="ParametersDataGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="True"
                  CanUserDeleteRows="True"
                  CanUserReorderColumns="False"
                  SelectionMode="Single"
                  GridLinesVisibility="All"
                  AlternatingRowBackground="#F5F5F5"
                  RowHeight="32">
            <DataGrid.Columns>
                <DataGridTextColumn Header="参数名"
                                    Binding="{Binding Key, UpdateSourceTrigger=PropertyChanged}"
                                    Width="*"
                                    MinWidth="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="Padding" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="参数值"
                                    Binding="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                    Width="2*"
                                    MinWidth="200">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="Padding" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 按钮栏 -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="确定"
                    Width="80"
                    Height="32"
                    Margin="0,0,10,0"
                    Click="OnOkClick"
                    IsDefault="True"/>
            <Button Content="取消"
                    Width="80"
                    Height="32"
                    Click="OnCancelClick"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
